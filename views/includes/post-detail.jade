article.post
  h2
    a.permalink(href=post.url)= post.title
  h3= post.subtitle
  | !{post.postBody}
  .postmeta
    if Object.keys(post.tags).length > 0
      .tags
        | filed under 
        each tag, slug in post.tags
          if (slug === post.lastTag) && (post.tagCount > 1)
            | and 
          a(href='/tag/'+slug, alt=tag, title=tag) #{tag}
          if (slug !== post.lastTag) && (post.tagCount > 2)
            | , 
          else
            |  
  .byline
    | posted 
    a.permalink(href=post.url)= post.formattedDate 
    | &nbsp;by 
    a.author(href='/#{post.author_slug}')= post.author
