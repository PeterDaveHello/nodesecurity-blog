doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title= postData[0].blogTitle
    atom:link(rel="alternate", type="text/html", href="#{postData[0].siteUrl}")
    atom:link(rel="self", type="application/atom+xml", href="#{postData[0].rssUrl}")
    link= postData[0].siteUrl
    lastBuildDate= new Date(postData[0].date).toUTCString()
    subtitle= postData[0].blogSubtitle
    description= postData[0].blogDescription
    generator bumble
    for post in postData
      item
        title= post.title
        link= post.permalink
        atom:link(rel="self", href="#{post.permalink}")
        pubDate= post.date.toUTCString()
        guid(isPermaLink="false")= post.fullSlug
        author
          name= post.author
          uri= post.siteUrl
        content
          <![CDATA[!{post.postBody}]]>
