extends layout

block body
  body(id= bodyId)
    include header
    article.content-container(class=type)
      .row.container
        a.permalink(href="")= date       
        .postTitle
          h1(style="margin-top: 0;")= title         
        .large-2.hide-for-small.columns
      .row.container
        .postContent.well!= content
    include footer