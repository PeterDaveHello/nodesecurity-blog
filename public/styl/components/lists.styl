/*--------------------------------------------------------------------
*
* LISTS
*
--------------------------------------------------------------------*/

ul, ol
  margin: 20px 0 20px 30px
  padding: 0

  li ul
    li
      list-style-type: circle 

  li li ul
    li
      list-style-type: square

ul
  li
    list-style-type: disc

  &.unstyled
    margin: 0

    li
      display: inline-block
      list-style-type: none
      padding: 0 15px

ol
  li
    list-style-type: decimal

dl
  dt
    font-weight: bold
  dd
    margin: 0

@media $desktop

  ul.unstyled li
    
    &:first-child
      padding-left: 0

    &:last-child
      padding-right: 0