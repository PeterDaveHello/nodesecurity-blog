/*--------------------------------------------------------------------
*
* HEADER
*
--------------------------------------------------------------------*/

header
  
  nav

    a, label
      font-weight: 400
      font-family: $font-sans
  
  .logo
    display: block
    background: url('/images/logo.svg') 0 0 no-repeat
    background-size: contain
    text-indent: -9999rem

    &:hover
      opacity: .8
      transition: opacity .5s ease

  input[type=checkbox]
    display: none    

@media $desktop

  header

    nav
      a
        line-height: 125px

    label
      display: none

@media $mobile-devices

  header
    
    nav.pull-right
      float: none
      text-aling: right
    
    label
      display: block
      text-align: right
      color: $blue
      cursor: pointer

    ul.unstyled
      display: none

      li
        display: block
        padding: 0 20px
        width: 100%
        border-bottom: 1px solid $gray-lighter

      a
        line-height: 50px

    input[type=checkbox]:checked ~ ul.unstyled
      display: block
      width: 100%

@media $tablet

  header
    label
      line-height: 125px

@media $smartphone

  .logo
    height: 30px

  header
    label
      line-height: 100px

@media (min-width: 481px)

  .logo
    height: 50px