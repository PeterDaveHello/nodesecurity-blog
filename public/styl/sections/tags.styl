/*--------------------------------------------------------------------
*
* BLOG TAGS
*
--------------------------------------------------------------------*/

.taglist

  a
    display: inline-block
    border-radius: 3px
    background-color: $blue-lighter
    font: 400 $font-small $font-sans

    &:hover
      background-color: $blue-light
      transition: background-color .5s ease-in

@media $desktop

  .taglist a
    margin: 0 0 0 3px
    width: 48%
    padding: 5px 8px
    overflow-x: hidden
    text-overflow: ellipsis

@media $mobile-devices

  .taglist a
    margin: 5px 3px
    padding: 8px 10px