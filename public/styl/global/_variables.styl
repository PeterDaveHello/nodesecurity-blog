/*--------------------------------------------------------------------
*
* VARIABLES
*
--------------------------------------------------------------------*/

//- Font Families
$font-serif = 'Sentinel SSm A', 'Sentinel SSm B', Georgia, Times, serif
$font-sans = 'Gotham Narrow SSm A', 'Gotham Narrow SSm B', Helvetica, Arial, sans-serif
$font-monospaced = Menlo, Monaco, Consolas, monospaced

//- Font Sizes

$font-base = 1rem
$font-large = $font-base*1.5
$font-small = $font-base*0.8

//- Headings Font Sizes

$font-heading-one = $font-base*2.5
$font-heading-two = $font-base*2.1
$font-heading-three = $font-base*1.7
$font-heading-four = $font-base*1.3
$font-heading-five = $font-base*0.9

//- Line Heights

$line-height-base = 1.6
$line-height-tight = $line-height-base*0.8
$line-height-spaced = $line-height-base*1.2

//- Responsive breakpoints
$smartphone = '(max-width: 480px)'
$tablet = '(min-width: 481px) and (max-width: 1023px)'
$mobile-devices = '(max-width: 1023px)'
$desktop = '(min-width: 1024px)'
$desktop-wide = '(min-width: 1200px)'